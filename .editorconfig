# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.rs]
indent_size = 4

[Cargo.toml]
indent_size = 4

[Makefile]
indent_style = tab

[*.{bat,cmd,ps1}]
end_of_line = crlf
