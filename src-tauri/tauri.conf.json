{
  "productName": "Pulm Notes",
  "version": "0.1.0",
  "identifier": "com.pulm.notes",
  "build": { 
    "beforeDevCommand": "",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../out"
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi", "nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "Pulm Notes",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false,
        "center": true,
        "label": "main",
        "dragDropEnabled": false,
        "devtools": false
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: https://asset.localhost file:; img-src 'self' data: asset: https://asset.localhost file:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src 'self' ipc: http://ipc.localhost https://ipc.localhost https:; font-src 'self' data:; object-src 'self'; media-src 'self' blob: data: asset: https://asset.localhost file:; frame-src 'self' blob: asset: https://asset.localhost file: https:",
      "capabilities": ["default"]
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "installer",
          "cmd": {
            "program": "$APPDATA/temp_update/*",
            "args": true
          },
          "sidecar": false
        },
        {
          "name": "open",
          "cmd": "open",
          "args": true,
          "sidecar": false
        },
        {
          "name": "chmod",
          "cmd": "chmod",
          "args": true,
          "sidecar": false
        },
        {
          "name": "xdg-open",
          "cmd": "xdg-open",
          "args": true,
          "sidecar": false
        }
      ]
    }
  }
}
